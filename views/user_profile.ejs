<link rel="stylesheet" href="/css/user_profile.css" />
<div id="profile-page">
  <div class="profile-container">
    <div class="profile-container">
      <div class="profile-info">
        <div id="name-pic">
          <img
            id="dp"
            src="https://img.nowrunning.com/content/Artist/SunnyLeone/stills/sunnyleone-stills-04.jpg"
          />
          <p
            style="
              font-size: 3rem;
              font-family: Arial, Helvetica, sans-serif;
              font-weight: 700;
            "
          >
            <%= user.firstname+" "+user.lastname %>
          </p>
        </div>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Phone:</strong> <%= user.phone %></p>
        <p>
          <strong>Date of Birth:</strong><%= user.dob.toLocaleDateString() %>
        </p>
      </div>
    </div>
    <section id="feed-posts">
      <form action="/posts/create" id="new-post-form" method="post">
        <textarea
          name="content"
          id="text-area"
          cols="30"
          rows="5"
          required
        ></textarea>
        <button type="submit">Post</button>
      </form>
    </section>
    <a href="/users/sign-out"><button type="buton">Log Out</button></a>
  </div>
  <div id="post-container">
    <%for(post of posts){%>
    <div class="post-and-comment">
      <div class="post-card">
        <div class="user-info">
          <img
            src="https://img.nowrunning.com/content/Artist/SunnyLeone/stills/sunnyleone-stills-02.jpg"
            alt="<%= user.firstname %> <%= user.lastname%> profile picture"
          />
          <span><%= user.firstname %> <%=user.lastname%></span>
        </div>
        <div class="post-content"><%=post.content%></div>
      </div>
      <form id="comment-form" action="/comments/create" method="post">
        <textarea name="content" cols="27" rows="3" required></textarea>
        <input type="hidden" name="post" value="<%=post._id %>" />
        <button type="submit">comment</button>
      </form>
      <%for(comment of post.comments){%>
      <div class="post-comment">
        <div class="comment-form"></div>
        <div id="comment-card">
          <span id="comment-name">
            <img
              src="https://img.nowrunning.com/content/Artist/SunnyLeone/stills/sunnyleone-stills-02.jpg"
              alt="<%= user.firstname %> <%= user.lastname%> "
            />
            <%=comment.user.firstname%> <%=comment.user.lastname%>
          </span>
          <span id="comment-content"><%= comment.content%></span>
        </div>
      </div>
      <%}%>
    </div>
    <%}%>
  </div>
</div>
